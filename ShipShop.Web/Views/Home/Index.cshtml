                        <label class="control-label col-md-3">Ghi chú</label>
                        <div class="col-md-9">
                            <input id="txtGhiChu" class="form-control" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success pull-right" id="btnThemHang">Ghi</button>
            </div>
        </div>

    </div>
</div>

<script>
    $('#btnLogout').off("click").on("click", function (e) {
        e.preventDefault();
        $('#frmLogout').submit();
    });
    function getDate() {
        var today = new Date();
        var dd = today.getDate();
        var MM = today.getMonth(); //January is 0!
        var yyyy = today.getFullYear();
        var HH = today.getHours();
        var mm = today.getMinutes();
        var weekday = new Array(7);
        weekday[0] = "Chủ nhật";
        weekday[1] = "Thứ 2";
        weekday[2] = "Thứ 3";
        weekday[3] = "Thứ 4";
        weekday[4] = "Thứ 5";
        weekday[5] = "Thứ 6";
        weekday[6] = "Thứ 7";
        var n = weekday[today.getDay()];
        if (dd < 10) {
            dd = '0' + dd
        }

        if (mm < 10) {
            mm = '0' + mm
        }

        today = HH + ' giờ ' + mm + ' phút,' + n + ' ngày ' + dd + ' tháng ' + MM;
        $('#pTimeSystem').text(today);
    }
    getDate();
    setInterval(function () {
        getDate();
    }, 60000);
</script>
