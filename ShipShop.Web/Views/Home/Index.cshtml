@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Assets/client/js/homePage.js"></script>
@using Microsoft.AspNet.Identity;
<div class="container">
    <div class="col-md-8 feature-grids">
        <div class="col-md-5">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="control-label col-md-5">SĐT người gửi</label>
                    <div class="col-md-7">
                        <input class="form-control" type="text" id="SDTNguoiGui">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-5">Vùng</label>
                    <div class="col-md-7">
                        <select id="VungNguoiGui" class="form-control">

                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-5">Địa chỉ liên hệ</label>
                    <div class="col-md-7">
                        <input type="text" class="form-control" id="DiaChiNguoiGui">
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-2">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="control-label col-md-12">Gửi đến</label>
                </div>

            </form>
        </div>
        <div class="col-md-5">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="control-label col-md-5">SĐT người nhận</label>
                    <div class="col-md-7">
                        <input type="text" class="form-control" id="SDTNguoiNhan">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-5">Vùng</label>
                    <div class="col-md-7">
                        <select id="VungNguoiNhan" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-5">Địa chỉ liên hệ</label>
                    <div class="col-md-7">
                        <input type="text" class="form-control" id="DiaChiNguoiNhan">
                    </div>
                </div>
            </form>
        </div>
        <div class="form-horizontal">
            <div class="col-md-6 col-md-offset-3">
                <div class="form-group">
                    <label class="control-label col-md-5">Phí thu hộ</label>
                    <div class="col-md-7">
                        <input type="text" class="form-control" id="PhiThuHo">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <table class="table table-striped" id="OrderDetail" style="width:100%;">
                <thead>
                    <tr>
                        <th style="width:85px;">
                            Thao tác
                        </th>
                        <th>
                            Tên sản phẩm
                        </th>
                        <th>
                            Ghi chú
                        </th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100">
                            <a href="#" data-toggle="modal" data-target="#modalAddDetail">+ Thêm hàng</a>
                        </td>
                    </tr>
                </tfoot>
            </table>
            <div class="col-md-offset-5">
                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("", "", FormMethod.Post, new { @id = "frmCreateOrder" }))
                    {
                        <input type="hidden" id="userName" value="@User.Identity.Name" />
                        <button class="btn btn-success" type="button" id="btnTaoDon">Tạo đơn</button>
                    }

                }
                else
                {
                    <button class="btn btn-success" id="btnTaoDon">Tạo đơn</button>
                }

            </div>

        </div>
    </div>
    <div class="col-md-4 feature-grids">
        @if (Request.IsAuthenticated)
        {
            <p>Xin chào @User.Identity.Name</p>
            <p>Thời gian hệ thống</p>

            using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { @id = "frmLogout" }))
            {

                @Html.AntiForgeryToken();
                <a href="/quan-tri-tai-khoan.html">Quản trị</a>
                <a id="btnLogout" href="#">Thoát</a>
            }
        }
        else
        {
            Html.RenderAction("Login", "Account");
        }
        <div>Khu vực dành cho quảng cáo</div>
    </div>
    <div class="clearfix"> </div>
</div>
@if (!Request.IsAuthenticated)
{
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Đăng kí tài khoản</h4>
                </div>
                <div class="modal-body">
                    @{Html.RenderAction("Register", "Account");}
                </div>
                <div class="modal-footer">
                    Đồng ý với các điều khoản đăng ký.
                </div>
            </div>
        </div>
    </div>
}

<div id="modalAddDetail" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm hàng hóa</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-3">Tên hàng</label>
                        <div class="col-md-9">
                            <input id="txtTenHang" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Link chi tiết</label>
                        <div class="col-md-9">
                            <input id="txtUrl" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Ghi chú</label>
                        <div class="col-md-9">
                            <input id="txtGhiChu" class="form-control" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success pull-right" id="btnThemHang">Ghi</button>
            </div>
        </div>

    </div>
</div>

<script>
    $('#btnLogout').off("click").on("click", function (e) {
        e.preventDefault();
        $('#frmLogout').submit();
    });
</script>



