@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-md-8 feature-grids">
        <div class="col-md-5">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="control-label col-md-5">SĐT người gửi</label>
                    <div class="col-md-7">
                        <input class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-5">Vùng</label>
                    <div class="col-md-7">
                        <input type="text" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-5">Địa chỉ liên hệ</label>
                    <div class="col-md-7">
                        <input type="text" class="form-control" id="pwd">
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-2">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="control-label col-md-12" for="email">Gửi đến</label>
                </div>

            </form>
        </div>
        <div class="col-md-5">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="control-label col-md-5" for="email">SĐT người nhận</label>
                    <div class="col-md-7">
                        <input type="email" class="form-control" id="email">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-5" for="pwd">Vùng</label>
                    <div class="col-md-7">
                        <input type="password" class="form-control" id="pwd">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-5" for="pwd">Địa chỉ liên hệ</label>
                    <div class="col-md-7">
                        <input type="password" class="form-control" id="pwd">
                    </div>
                </div>
            </form>
        </div>
        <div class="form-horizontal">
            <div class="col-md-6 col-md-offset-3">
                <div class="form-group">
                    <label class="control-label col-md-5" for="pwd">Phí thu hộ</label>
                    <div class="col-md-7">
                        <input type="password" class="form-control" id="pwd">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <table class="table table-striped" style="width:100%;">
                <thead>
                    <tr>
                        <th style="width:85px;">
                            Thao tác
                        </th>
                        <th>
                            Tên sản phẩm
                        </th>
                        <th>
                            Ghi chú
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td align="center">
                            <a href="javascript:">Xóa</a>
                        </td>
                        <td>
                            Sản phẩm 1
                        </td>
                        <td>
                            Các thông tin liên quan
                        </td>
                    </tr>
                    <tr>
                        <td align="center">
                            <a href="javascript:">Xóa</a>
                        </td>
                        <td>
                            Sản phẩm 2
                        </td>
                        <td>
                            Các thông tin liên quan
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100">
                            <a href="">+ Thêm hàng</a>
                        </td>
                    </tr>
                </tfoot>
            </table>
            <div class="col-md-offset-5">
                <button class="btn btn-success">Tạo đơn</button>
            </div>

        </div>
    </div>
    <div class="col-md-4 feature-grids">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="control-label col-md-4" for="email">Số điện thoại:</label>
                <div class="col-md-8">
                    <input type="email" class="form-control" id="email" placeholder="Số điện thoại">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4" for="pwd">Mật khẩu:</label>
                <div class="col-md-8">
                    <input type="password" class="form-control" id="pwd" placeholder="Mật khẩu">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <div class="checkbox">
                        <label><input type="checkbox"> Ghi nhớ</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-5">
                    <a data-toggle="modal" data-target="#myModal" href="javascript:void(0);">Đăng kí</a>
                </div>
                <div class="col-md-5">
                    <button type="submit" class="btn btn-default">Đăng nhập</button>
                </div>
            </div>
        </form>
        <div>Khu vực dành cho quảng cáo</div>
    </div>
    <div class="clearfix"> </div>
</div>


<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Đăng kí tài khoản</h4>
            </div>
            <div class="modal-body">
                @{Html.RenderAction("Index", "Account"); }
            </div>
            <div class="modal-footer">
                Đồng ý với các điều khoản đăng ký.
            </div>
        </div>

    </div>
</div>


