@model ShipShop.Web.Models.LoginViewModel

<script src="~/Assets/client/js/login.ajax.js"></script>
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new {@id="frmLogin", @class = "form-horizontal" }))
{
    <div class="form-group">
        <label class="control-label col-md-4" for="email">Số điện thoại:</label>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
    </div>
        <div class="form-group">
            <label class="control-label col-md-4" for="pwd">Mật khẩu:</label>
            <div class="col-md-8">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group" style="margin-bottom:0px;">
            <div class="col-md-offset-4 col-md-8">
                <div class="checkbox">
                    <label>@Html.CheckBoxFor(m => m.RememberMe) Ghi nhớ</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12" style="padding-bottom:15px;">
                <span style="color:red;" id="lblMsg"></span>
            </div>

            <div class="col-md-offset-4 col-md-5">
                <button type="button" id="btnSubmit" class="btn btn-default">Đăng nhập</button>
            </div>
            <div class="col-md-offset-2 col-md-10" style="padding-top:10px">
                <label> Chưa có tài khoản ? <a href="#" data-toggle="modal" data-target="#myModal">Đăng kí</a></label>
            </div>
        </div>
}
