@using ShipShop.Web.Models;
@model RegisterViewModel
<script src="~/Assets/client/js/registerAccount.js"></script>
@using (Html.BeginForm("Register","Account",FormMethod.Post,new {@class= "form-horizontal",@id="frmRegister" } ))
{
    @Html.AntiForgeryToken()
    <div class="box-body">
        <div class="form-group">
            <label class="col-md-offset-2 col-md-3 control-label">Số điện thoại</label>
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-offset-2 col-md-3 control-label">Mật khẩu</label>
            <div class="col-md-4">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-offset-2 col-md-3 control-label">Nhập lại mật khẩu</label>
            <div class="col-md-4">
                <input type="password" id="rePassword" class="form-control" />
            </div>
        </div>

        <div class="form-group ">
            <div class="col-md-3 hidden">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.Vendee) Người bán
                    </label>
                </div>
            </div>
            <div class="col-md-4">

            </div>
            <input id="rdbVendee" type="radio" style="margin-left:15px;" name="Vendee" />
            <label class="control-label">Người bán</label>
            <input id="rdbNoVendee" type="radio" style="margin-left:15px;" name="Vendee" />
            <label class="control-label">Người mua</label>
        </div>

        <div class="form-group" id="txtShopName">
            <label for="inputPassword3" class="col-md-3 control-label">Website hoặc tên shop</label>
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.WebOrShopName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-md-3 control-label">Vùng</label>
            <div class="col-md-9">
                @Html.DropDownList("RegionID", null, new { @class = "form-control"})
                <input type="hidden" name="RegionID">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-md-3 control-label">Địa chỉ</label>
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="box-footer">
        <div class="col-md-12">
            <span id="lblMsg" class="error"></span>
        </div>
        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
        <button type="button" id="btnRegister" class="btn btn-success pull-right">Đăng kí</button>
    </div>
    }
<script>
    $(document).ready(function () {
        $('#rdbVendee').prop("checked", true);
        $('#Vendee').prop("checked", true);
        $('#rdbVendee').change(function () {
            $('#Vendee').prop("checked", $(this).is(':checked'));
            $('#txtShopName').show();

        });
        $('#rdbNoVendee').change(function () {
            $('#Vendee').prop("checked", false);
            $('#txtShopName').hide();
        });
    });
</script>
