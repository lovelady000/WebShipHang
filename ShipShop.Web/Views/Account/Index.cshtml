@using ShipShop.Web.Models;
@model RegisterViewModel
        <form class="form-horizontal" novalidate name="frmAddMenu" role="form">
            <div class="box-body">
                <div class="form-group">
                    <label class="col-md-offset-2 col-md-3 control-label">Số điện thoại</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m=>m.UserName,new { @class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label  class="col-md-offset-2 col-md-3 control-label">Mật khẩu</label>
                    <div class="col-md-4">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-offset-2 col-md-3 control-label">Nhập lại mật khẩu</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" />
                    </div>
                </div>

                <div class="form-group ">
                    <div class="col-md-3 hidden">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(m=>m.Vendee) Người bán
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">

                    </div>
                    <input type="radio" style="margin-left:15px;" name="BanLa" />
                    <label class="control-label">Người bán</label>
                    <input type="radio" style="margin-left:15px;" name="BanLa"/>
                    <label class="control-label">Người mua</label>
                </div>

                <div class="form-group">
                    <label for="inputPassword3" class="col-md-3 control-label">Website hoặc tên shop</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.WebOrShopName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-md-3 control-label">Vùng</label>
                    <div class="col-md-9">
                        <select class="form-control" name="groupID"></select>
                        <input type="hidden" name="groupID" >
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-md-3 control-label">Địa chỉ</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.Adress, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-3">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="Status" > Kích hoạt
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-success pull-right">Sign in</button>
            </div>
            <!-- /.box-footer -->
        </form>
