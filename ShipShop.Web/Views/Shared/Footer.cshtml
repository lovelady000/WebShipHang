@{
    var listDonViTieuBieu = (IEnumerable<ShipShop.Web.Models.DonViTieuBieuViewModel>)ViewBag.listDonViTieuBieu;
    var webInfo = (ShipShop.Web.Models.WebInformationViewModel) ViewBag.WebInfo;
}
<script>
(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v2.7&appId=295059874188437";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div class="footer ">
    <div class="container ">
        <label> Đơn vị tiêu biểu</label>
        <div class="projects">
            <div class="container">
                <div class="col-md-12 project-left">
                    <!-- flex-slider -->
                    <div class="work-bottom">
                        <div class="nbs-flexisel-container">
                            <div class="nbs-flexisel-inner">
                                <ul id="flexiselDemo1" class="nbs-flexisel-ul" style="left: -285px; display: block;">

                                    @foreach (var item in listDonViTieuBieu)
                                    {
                                        <li class="nbs-flexisel-item" style="width: 70px;">
                                            <div class="project-grids">
                                                <a href="@item.Url">
                                                    <img src="@item.Image" alt="@item.Name" height="70" width="70">
                                                </a>
                                            </div>
                                        </li>
                                    }
                                </ul>
                                <div class="nbs-flexisel-nav-left" style="top: 138px;"></div><div class="nbs-flexisel-nav-right" style="top: 138px;"></div>
                            </div>
                        </div>
                        <script type="text/javascript">
                            $(window).load(function () {
                                $("#flexiselDemo1").flexisel({
                                    visibleItems: 10,
                                    animationSpeed: 1000,
                                    autoPlay: true,
                                    autoPlaySpeed: 3000,
                                    pauseOnHover: true,
                                    enableResponsiveBreakpoints: true,
                                    responsiveBreakpoints: {
                                        portrait: {
                                            changePoint: 480,
                                            visibleItems: 2
                                        },
                                        landscape: {
                                            changePoint: 640,
                                            visibleItems: 3
                                        },
                                        tablet: {
                                            changePoint: 768,
                                            visibleItems: 3
                                        }
                                    }
                                });

                            });
                        </script>
                        <script src="~/Assets/client/js/jquery.flexisel.js"></script>
                        <!-- //flex-slider -->
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
        <div class="clearfix "> </div>
        <div style="padding-top:20px;">
            <div class="col-md-5 pull-left">
                <div class="fb-page" data-href="@webInfo.Facebook" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/facebook" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/facebook">Facebook</a></blockquote></div>
            </div>
            <div class="col-md-7 pull-right">
                <div id="map" style="width:100%; height:200px;"></div>
                <script>
                function initMap() {
                    var mapDiv = document.getElementById('map');
                    var map = new google.maps.Map(mapDiv, {
                        center: { lat: @webInfo.Latitude, lng: @webInfo.Longitude },
                        zoom: 16
                    });
                }
                </script>
                <script async defer
                        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAMmEivETT6cZzyDCJwnofL2J0ivpKpJc4&callback=initMap">
                </script>
            </div>
        </div>

        <div class="col-md-12">
            @*<div class="fb-comments" data-href="http://smartstore.somee.com/" data-numposts="5"></div>*@
        </div>

    </div>
</div>
<!--//footer-->
